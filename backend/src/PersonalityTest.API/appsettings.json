{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=personalitytest;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-jwt-key-change-this-in-production-minimum-32-characters",
    "Issuer": "PersonalityTest",
    "Audience": "PersonalityTestClient",
    "AccessTokenExpiryMinutes": "15"
  },
  "S3": {
    "ServiceUrl": "http://localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "BucketName": "personality-test"
  },
  "Email": {
    "FromEmail": "noreply@personalitytest.com",
    "FromName": "Personality Test",
    "SmtpHost": "localhost",
    "SmtpPort": "587",
    "SmtpUser": "",
    "SmtpPassword": ""
  },
  "Stripe": {
    "SecretKey": "sk_test_your_stripe_secret_key",
    "WebhookSecret": "whsec_your_webhook_secret",
    "PublishableKey": "pk_test_your_publishable_key"
  },
  "App": {
    "BaseUrl": "http://localhost:4200",
    "FrontendUrl": "http://localhost:4200"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
