// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                    Int                    @id @default(autoincrement())
  email                 String                 @unique
  name                  String?
  password              String
  emailVerified         DateTime?
  image                 String?
  bio                   String?
  role                  String                 @default("user") // user, admin
  isActive              Boolean                @default(true)
  lastLoginAt           DateTime?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  testAttempts          TestAttempt[]
  payments              Payment[]
  invitations           Invitation[]           @relation("InvitationSender")
  verificationTokens    VerificationToken[]
  passwordResetTokens   PasswordResetToken[]
  activityLogs          ActivityLog[]
}

model TestAttempt {
  id               Int       @id @default(autoincrement())
  userId           Int
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  answers          String    // JSON string of answers
  personalityType  String    // E.g., "INTJ"
  scores           String    // JSON string of dimension scores
  completedAt      DateTime  @default(now())
  hasPremiumAccess Boolean   @default(false)
  shares           Share[]

  @@index([userId])
}

model Payment {
  id              Int      @id @default(autoincrement())
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  testAttemptId   Int?
  stripeSessionId String   @unique
  stripePaymentId String?
  amount          Int      // Amount in cents
  status          String   // pending, completed, failed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([stripeSessionId])
}

model Share {
  id            Int         @id @default(autoincrement())
  testAttemptId Int
  testAttempt   TestAttempt @relation(fields: [testAttemptId], references: [id], onDelete: Cascade)
  shareCode     String      @unique
  privacy       String      @default("public") // public, friends, private
  createdAt     DateTime    @default(now())
  expiresAt     DateTime?

  @@index([shareCode])
}

model Invitation {
  id         Int      @id @default(autoincrement())
  senderId   Int
  sender     User     @relation("InvitationSender", fields: [senderId], references: [id], onDelete: Cascade)
  email      String
  token      String   @unique
  status     String   @default("pending") // pending, accepted, expired
  createdAt  DateTime @default(now())
  expiresAt  DateTime

  @@index([token])
  @@index([email])
}

model VerificationToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  type      String   // email_verification, email_change
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([token])
  @@index([userId])
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([token])
  @@index([userId])
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action      String   // login, logout, test_started, test_completed, profile_updated, etc.
  description String?
  ipAddress   String?
  userAgent   String?
  metadata    String?  // JSON string for additional data
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}
